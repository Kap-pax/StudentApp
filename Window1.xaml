<Window x:Class="StudentApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentApp"
        mc:Ignorable="d"
        Title="Window1" Height="470" Width="310"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="335*"/>
        </Grid.RowDefinitions>
        <TextBox  Name="txtPesel"  HorizontalAlignment="Left" Height="20" Margin="155,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Pesel*" HorizontalAlignment="Left" Height="29" Margin="13,38,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>
        <TextBox  Name="txtName" HorizontalAlignment="Left" Height="20" Margin="155,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Imie*" HorizontalAlignment="Left" Height="29" Margin="13,72,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>
        <TextBox Name="txtSecName" HorizontalAlignment="Left" Height="20" Margin="155,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Drugie Imie" HorizontalAlignment="Left" Height="29" Margin="13,106,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>
        <TextBox Name="txtSurname" HorizontalAlignment="Left" Height="20" Margin="155,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Nazwisko*" HorizontalAlignment="Left" Height="29" Margin="13,140,0,0" VerticalAlignment="Top" Width="137" RenderTransformOrigin="0.5,-0.723" Grid.Row="2"/>

        <DatePicker  HorizontalAlignment="Left" Height="27" Margin="155,175,0,0" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2" Name="txtDateOfBirth" />
        <Label Content="Data urodzenia*" HorizontalAlignment="Left" Height="29" Margin="13,174,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>


        <TextBox Name="txtNumber" HorizontalAlignment="Left" Height="20" Margin="155,214,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Numer telefonu" HorizontalAlignment="Left" Height="29" Margin="13,209,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>
        <TextBox Name="txtLocation"  HorizontalAlignment="Left" Height="20" Margin="155,248,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Adres zamieszkania*" HorizontalAlignment="Left" Height="29" Margin="13,243,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>
        <Button Content="Dodaj" HorizontalAlignment="Left" Height="25" Margin="13,358,0,0" VerticalAlignment="Top" Width="120" Grid.Row="2" Click="Add_Click"/>
        <Button Content="Anuluj" HorizontalAlignment="Left" Height="25" Margin="155,358,0,0" VerticalAlignment="Top" Width="120" Grid.Row="2" Click="Cancel_Click"/>
        <Label Content="Dodaj Ucznia:" HorizontalAlignment="Left" Height="41" Margin="13,10,0,0" VerticalAlignment="Top" Width="262" Grid.RowSpan="3"/>
        <TextBox x:Name="txtCity"  HorizontalAlignment="Left" Height="20" Margin="155,282,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Miejscowosc*" HorizontalAlignment="Left" Height="29" Margin="13,277,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>
        <TextBox x:Name="txtCode"  HorizontalAlignment="Left" Height="20" Margin="155,316,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Kod pocztowy*" HorizontalAlignment="Left" Height="29" Margin="13,311,0,0" VerticalAlignment="Top" Width="137" Grid.Row="2"/>
    </Grid>
</Window>
